<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moviestop"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat" >
        <activity
            android:name="com.hackathon.pierama.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
       -
        <activity
            android:name="com.hackathon.pierama.next_screen"
            android:label="@string/title_activity_next_screen"
            android:theme="@style/Theme.AppCompat" >
-
            <intent-filter>
                <action android:name="com.hackathon.pierama.next_screen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.hackathon.pierama.MSProvider"
            android:authorities="com.hackathon.pierama.msprovider" >
        </provider>
    </application>

</manifest>